@page "/battle/game"
@layout MainLayout

@using ProjektGameCardentis.Game.Battle
@using ProjektGameCardentis.Entities.Cards
@using ProjektGameCardentis.Components

@inject AuthState AuthState
@inject PlayerService PlayerService
@inject NavigationManager Nav

<h1>Gra</h1>

@if (battle == null)
{
    <p>Ładowanie walki...</p>
}
else
{
    <h2>Tura: @battle.Turn</h2>

    <hr />

    <h3>Gracz</h3>
    <p>Nick: @playerName</p>
    <p>HP: @battle.Player.Health</p>
    <p>Pancerz: @battle.Player.Armor</p>
    <p>Talia: @battle.Player.Deck.Cards.Count</p>
    <p>Odrzut: @battle.Player.DiscardPile.Cards.Count</p>
    <p>Energia: @battle.Player.Energy / @battle.Player.MaxEnergy</p>

    <hr />

    <h3>Przeciwnik</h3>
    <p>Nick: AI</p>
    <p>HP: @battle.Enemy.Health</p>
    <p>Pancerz: @battle.Enemy.Armor</p>

    <hr />

    @if (battle.IsPlayerTurn && !battle.IsFinished)
    {
        <h3>Twoja ręka</h3>

        <div class="hand">
            @foreach (var card in battle.Player.Hand.Cards)
            {
                <CardView Card="card"
                          OnClick="@(() => PlayCard(card))" />
            }
        </div>

        <br />

        <button @onclick="EndTurn">
            Zakończ turę
        </button>
    }

    @if (battle.IsFinished)
    {
        <hr />
        <h2>KONIEC GRY</h2>

        @if (!battle.Player.IsAlive)
        {
            <p>Przegrałeś</p>
        }
        else
        {
            <p>Wygrałeś</p>
        }
    }
}

@code {
    private BattleState? battle;
    private string playerName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        if (!AuthState.IsAuthenticated)
        {
            Nav.NavigateTo("/login", true);
            return;
        }

        var player = await PlayerService.GetCurrentPlayer();
        if (player == null)
        {
            Nav.NavigateTo("/login", true);
            return;
        }

        playerName = player.Username;

        var battlePlayer = BattlePlayerFactory.Create(player);
        var enemy = EnemyFactory.CreateBasicEnemy();

        battle = new BattleState
        {
            Player = battlePlayer,
            Enemy = enemy
        };

        battle.StartBattle();
    }

    private void PlayCard(Card card)
    {
        battle?.PlayCard(card);
    }

    private void EndTurn()
    {
        if (battle == null || battle.IsFinished)
            return;

        battle.EndTurn();

        if (!battle.IsPlayerTurn && !battle.IsFinished)
        {
            BattleAi.PlayTurn(battle);
        }
    }
}
